@model MinhaSaude.Models.Tratamento

@{
    ViewData["Title"] = "Novo Tratamento";
}

<h4>Incluir Tratamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="MedicamentoId" class="control-label"></label>
                <select asp-for="MedicamentoId" class ="form-control" asp-items="ViewBag.MedicamentoId"></select>
                <p>
                    <a asp-area="" asp-controller="Medicamentos" asp-action="Create">Incluir Medicamento</a> caso não esteja na lista
                </p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrequenciaUso" class="control-label"></label>
                <input asp-for="FrequenciaUso" class="form-control" />
                <span asp-validation-for="FrequenciaUso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anotacoes" class="control-label"></label>
                <input asp-for="Anotacoes" class="form-control" />
                <span asp-validation-for="Anotacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
