@model MinhaSaude.Models.Medicamento

@{
    ViewData["Title"] = "Detalhes do Medicamento";
}

<h4>Medicamento: @Html.DisplayFor(model => model.Nome)</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratorio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Laboratorio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrincAtivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrincAtivo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dosagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dosagem)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-success" asp-controller="Medicamentos" asp-action="Index">Voltar</a>
</div>
